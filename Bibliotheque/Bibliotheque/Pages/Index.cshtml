@page
@model IndexModel
@{
    ViewData["Title"] = "Accueil";
}

<div class="container">
    <div class="row">
        <a asp-page="Book/Index">Tous les livres </a>
    </div>

    <div class="row mt-3 mb-3">
        @foreach (var book in Model.Books)
        {
            <div class="col-3 ">
                <div class="card">
                    <img src="/api/Book/Preface/@book.Id" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">@book.Title</h5>
                        <p class="card-text">@book.Summary.Substring(0, 50)</p>
                        <a asp-page="BookDetails" asp-route-id="@book.Id" class="btn btn-primary">Détails</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
